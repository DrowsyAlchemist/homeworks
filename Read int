using System;

namespace Lessons
{
    class Lessons
    {
        public static void Main()
        {
            int value = ReadInt();
            Console.WriteLine(value);
            Console.ReadLine();
        }

        public static int ReadInt()
        {
            bool isInteger = false;
            int result = 0;

            while (!isInteger)
            {
                Console.Write("Введите целое число: ");
                isInteger = int.TryParse(Console.ReadLine(), out result);
            }
            return result;
        }
    }
}
