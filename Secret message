using System;

namespace Lessons
{
    class Lessons
    {
        private static void Main()
        {
            string secretMessage = "Обмани себя. Обмани мир.";
            string password = "El Psy Congroo";
            int attemptCount = 3;
            string inputData;

            for (int i = 0; i < attemptCount; i++)
            {
                Console.WriteLine("Введите пароль: ");
                inputData = Console.ReadLine();

                if (inputData == password)
                {
                    Console.WriteLine("\n" + secretMessage);
                    break;
                }
            }
            Console.ReadKey();
        }
    }
}
