using System;
using System.Collections.Generic;

namespace Lessons
{
    class Lessons
    {
        public static void Main()
        {
            Dictionary<string, string> wordsMeanings = new Dictionary<string, string>();
            string inputData = string.Empty;

            while (inputData != "3")
            {
                Console.WriteLine("1. Добавить слово\n2. Узнать значение слова\n3. Выйти\n");
                inputData = Console.ReadLine();

                switch (inputData)
                {
                    case "1":
                        AddWord(wordsMeanings);
                        break;
                    case "2":
                        PrintMeaning(wordsMeanings);
                        break;
                    default:
                        Console.Clear();
                        break;
                }
            }
        }

        private static void AddWord(Dictionary<string, string> wordsMeanings)
        {
            Console.Clear();
            Console.Write("Слово: ");
            string word = Console.ReadLine();

            if (wordsMeanings.ContainsKey(word) == false)
            {
                Console.Write("Значение: ");
                string meaning = Console.ReadLine();
                wordsMeanings.Add(word, meaning);
            }
            else
            {
                PrintErrorMessage("Это слово уже есть в словаре.");
                Console.ReadKey();
            }
            Console.Clear();
        }

        private static void PrintMeaning(Dictionary<string, string> wordsMeanings)
        {
            Console.Clear();
            Console.Write("Слово: ");
            string word = Console.ReadLine();

            if (wordsMeanings.ContainsKey(word))
                Console.WriteLine($"Значение: {wordsMeanings[word]}");
            else
                PrintErrorMessage("Слово не найдено!");

            Console.ReadLine();
            Console.Clear();
        }

        public static void PrintErrorMessage(string message)
        {
            ConsoleColor defaultColor = Console.ForegroundColor;
            Console.ForegroundColor = ConsoleColor.Red;
            Console.WriteLine(message);
            Console.ForegroundColor = defaultColor;
        }
    }
}
