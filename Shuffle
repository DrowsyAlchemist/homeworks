using System;

namespace Lessons
{
    class Lessons
    {
        public static void Main()
        {
            int[] array = { 1, 2, 3, 4, 5 };

            for (int i = 0; i < array.Length; i++)
                Console.Write(array[i] + " ");

            Shuffle(array);
            Console.WriteLine("\n");

            for (int i = 0; i < array.Length; i++)
                Console.Write(array[i] + " ");

            Console.ReadKey();
        }

        private static void Shuffle(int[] array)
        {
            Random random = new Random();
            int randomLowerBound = 0;
            int randomUpperBound = array.Length - 1;

            for (int i = 0; i < array.Length; i++)
            {
                int randomIndex = random.Next(randomLowerBound, randomUpperBound);
                int temp = array[i];
                array[i] = array[randomIndex];
                array[randomIndex] = temp;
            }
        }
    }
}
