using System;

namespace Lessons
{
    class Lessons
    {
        private static void Main()
        {
            int minutesPerHour = 60;
            int receptionTimeInMinutes = 10;
            Console.WriteLine("Введите кол-во старушек: ");
            int oldLadiesCount = Convert.ToInt32(Console.ReadLine());
            int hoursWait = oldLadiesCount * receptionTimeInMinutes / minutesPerHour;
            int minutesWait = oldLadiesCount * receptionTimeInMinutes % minutesPerHour;
            Console.WriteLine($"\nВы должны отстоять в очереди {hoursWait} час(а) и {minutesWait} минут(ы).");
            Console.ReadKey();
        }
    }
}
