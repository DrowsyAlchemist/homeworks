using System;

namespace Lessons
{
    class Lessons
    {
        private static void Main()
        {
            Random random = new Random();
            int lowerBound = 0;
            int upperBound = 100;
            int number = random.Next(lowerBound, upperBound + 1);
            int sum = 0;
            int firstDivider = 3;
            int secondDivider = 5;

            for (int i = 0; i <= number; i++)
            {
                if (i % firstDivider == 0 || i % secondDivider == 0)
                    sum += i;
            }
            Console.WriteLine(sum);
            Console.ReadKey();
        }
    }
}
