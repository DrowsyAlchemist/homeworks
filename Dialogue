using System;

namespace Lessons
{
    class Lessons
    {
        private static void Main()
        {
            Console.Write("Как вас зовут?\nИмя: ");
            string name = Console.ReadLine();
            Console.Write("\nСколько вам лет?\nВозраст: ");
            int age = Convert.ToInt32(Console.ReadLine());
            Console.Write("\nКакой ваш знак зодиака?\nЗнак: ");
            string zodiacSign = Console.ReadLine();
            Console.Write("\nКакова ваша профессия? Наверное вы милиционер?\nЯ ");
            string job = Console.ReadLine();
            Console.WriteLine($"\nВас зовут {name}, вам {age} год(а)/лет, вы {zodiacSign} и ваша профессия: {job}.");
            Console.ReadKey();
        }
    }
}
